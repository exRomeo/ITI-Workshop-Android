<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="scrollable"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/cvArticleImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivArticleImage"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/google"/>

            </androidx.cardview.widget.CardView>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_articleTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Big Tech is making its stuff slower"
                    android:textStyle="bold"
                    android:gravity="center" />



                <TextView
                    android:id="@+id/tvArticleAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ed Zitron"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_articleTitle"
                    app:layout_constraintStart_toStartOf="@id/tv_articleTitle"
                    android:layout_marginTop="16dp"/>


                <TextView
                    android:id="@+id/articleDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="asdfadsfasdfasdfdsfsdfad"
                    android:textColor="#9f9f9f"
                    app:layout_constraintTop_toTopOf="@id/tvArticleAuthor"
                    app:layout_constraintBottom_toBottomOf="@id/tvArticleAuthor"
                    app:layout_constraintStart_toEndOf="@id/tvArticleAuthor"/>



                <TextView
                    android:id="@+id/tv_articleContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/articleContent"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/articleDate"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</layout>